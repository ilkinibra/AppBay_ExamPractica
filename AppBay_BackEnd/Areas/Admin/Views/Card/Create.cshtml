@model Card
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
         <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label asp-for="IconPath" >Icon</label>
                      <input asp-for="IconPath" placeholder="Icon">
                      <span class="text-danger" asp-validation-for="IconPath"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Title">Title</label>
                      <input asp-for="Title" placeholder="Title">
                      <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Description">Description</label>
                      <input asp-for="Description" placeholder="Description">
                      <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Card" asp-action="Index">Back</button>
          </form>
    </div>
</div>
